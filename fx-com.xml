<?xml version="1.0" encoding="UTF-8"?>
<project name="fx-com" default="all">


    <property file="fx-com.properties"/>
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
    <property name="skip.tests" value="true"/>
     -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="700m"/>
    <patternset id="ignored.files">
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/*.rbc/**"/>
        <exclude name="**/*~/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.bundle/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/.hg/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/.tox/**"/>
        <exclude name="**/CVS/**"/>
        <exclude name="**/RCS/**"/>
        <exclude name="**/SCCS/**"/>
        <exclude name="**/__pycache__/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/rcs/**"/>
        <exclude name="**/vssver.scc/**"/>
        <exclude name="**/vssver2.scc/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.zip"/>
        <include name="*.apk"/>
        <include name="*.war"/>
        <include name="*.egg"/>
        <include name="*.ear"/>
        <include name="*.ane"/>
        <include name="*.swc"/>
        <include name="*.jar"/>
    </patternset>
    <patternset id="compiler.resources">
        <exclude name="**/?*.java"/>
        <exclude name="**/?*.form"/>
        <exclude name="**/?*.class"/>
        <exclude name="**/?*.groovy"/>
        <exclude name="**/?*.scala"/>
        <exclude name="**/?*.flex"/>
        <exclude name="**/?*.kt"/>
        <exclude name="**/?*.clj"/>
    </patternset>

    <!-- JDK definitions -->

    <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
    <path id="jdk.classpath.1.8">
        <fileset dir="${jdk.home.1.8}">
            <include name="lib/ant-javafx.jar"/>
            <include name="lib/dt.jar"/>
            <include name="lib/javafx-mx.jar"/>
            <include name="lib/jconsole.jar"/>
            <include name="lib/packager.jar"/>
            <include name="lib/sa-jdi.jar"/>
            <include name="lib/tools.jar"/>
            <include name="jre/lib/charsets.jar"/>
            <include name="jre/lib/deploy.jar"/>
            <include name="jre/lib/javaws.jar"/>
            <include name="jre/lib/jce.jar"/>
            <include name="jre/lib/jfr.jar"/>
            <include name="jre/lib/jfxswt.jar"/>
            <include name="jre/lib/jsse.jar"/>
            <include name="jre/lib/management-agent.jar"/>
            <include name="jre/lib/plugin.jar"/>
            <include name="jre/lib/resources.jar"/>
            <include name="jre/lib/rt.jar"/>
            <include name="jre/lib/ext/cldrdata.jar"/>
            <include name="jre/lib/ext/dnsns.jar"/>
            <include name="jre/lib/ext/jaccess.jar"/>
            <include name="jre/lib/ext/jfxrt.jar"/>
            <include name="jre/lib/ext/localedata.jar"/>
            <include name="jre/lib/ext/nashorn.jar"/>
            <include name="jre/lib/ext/sunec.jar"/>
            <include name="jre/lib/ext/sunjce_provider.jar"/>
            <include name="jre/lib/ext/sunpkcs11.jar"/>
            <include name="jre/lib/ext/zipfs.jar"/>
        </fileset>
    </path>

    <property name="project.jdk.home" value="${jdk.home.1.8}"/>
    <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
    <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>


    <!-- Project Libraries -->

    <path id="library.jssc.classpath">
        <pathelement location="${basedir}/src/jssc.jar"/>
    </path>
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2.home" value="${idea.home}/lib"/>
    <path id="javac2.classpath">
        <pathelement location="${javac2.home}/javac2.jar"/>
        <pathelement location="${javac2.home}/jdom.jar"/>
        <pathelement location="${javac2.home}/asm-all.jar"/>
        <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
        <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions"
                 classpathref="javac2.classpath"/>
    </target>

    <!-- Modules -->


    <!-- Module FX-COM -->

    <dirname property="module.fx-com.basedir" file="${ant.file}"/>


    <property name="module.jdk.home.fx-com" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.fx-com" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.fx-com" value="${project.jdk.classpath}"/>

    <property name="compiler.args.fx-com" value="-encoding UTF-8 -source 8 ${compiler.args}"/>

    <property name="fx-com.output.dir" value="${module.fx-com.basedir}/out/production/FX-COM"/>
    <property name="fx-com.testoutput.dir" value="${module.fx-com.basedir}/out/test/FX-COM"/>

    <path id="fx-com.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="fx-com.module.production.classpath">
        <path refid="${module.jdk.classpath.fx-com}"/>
        <path refid="library.jssc.classpath"/>
    </path>

    <path id="fx-com.runtime.production.module.classpath">
        <pathelement location="${fx-com.output.dir}"/>
        <path refid="library.jssc.classpath"/>
    </path>

    <path id="fx-com.module.classpath">
        <path refid="${module.jdk.classpath.fx-com}"/>
        <pathelement location="${fx-com.output.dir}"/>
        <path refid="library.jssc.classpath"/>
    </path>

    <path id="fx-com.runtime.module.classpath">
        <pathelement location="${fx-com.testoutput.dir}"/>
        <pathelement location="${fx-com.output.dir}"/>
        <path refid="library.jssc.classpath"/>
    </path>


    <patternset id="excluded.from.module.fx-com">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.fx-com">
        <patternset refid="excluded.from.module.fx-com"/>
    </patternset>

    <path id="fx-com.module.sourcepath">
        <dirset dir="${module.fx-com.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.fx-com" depends="compile.module.fx-com.production,compile.module.fx-com.tests"
            description="Compile module FX-COM"/>

    <target name="compile.module.fx-com.production" depends="register.custom.compilers"
            description="Compile module FX-COM; production classes">
        <mkdir dir="${fx-com.output.dir}"/>
        <javac2 destdir="${fx-com.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
                memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.fx-com}/javac">
            <compilerarg line="${compiler.args.fx-com}"/>
            <bootclasspath refid="fx-com.module.bootclasspath"/>
            <classpath refid="fx-com.module.production.classpath"/>
            <src refid="fx-com.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.fx-com"/>
        </javac2>

        <copy todir="${fx-com.output.dir}">
            <fileset dir="${module.fx-com.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.fx-com.tests" depends="register.custom.compilers,compile.module.fx-com.production"
            description="compile module FX-COM; test classes" unless="skip.tests"/>

    <target name="clean.module.fx-com" description="cleanup module">
        <delete dir="${fx-com.output.dir}"/>
        <delete dir="${fx-com.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.fx-com" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.fx-com" description="build all modules"/>

    <target name="all" depends="build.modules" description="build all"/>
</project>